{
    "admin": {
        "realm": "liveoak-admin"
    },

    "eventsStore": {
        "provider": "mongo"
    },

    "realm": {
        "provider": "mongo"
    },

    "user": {
        "provider": "mongo"
    },

    "userSessions": {
        "provider" : "mem"
    },

    "realmCache": {
        "provider": "mem"
    },

    "userCache": {
        "provider": "mem",
        "mem": {
            "maxSize": 20000
        }
    },

    "timer": {
        "provider": "basic"
    },

    "theme": {
        "default": "keycloak",
        "staticMaxAge": 2592000,
        "cacheTemplates": true,
        "cacheThemes": true,
        "folder": {
            "dir": "${keycloak.theme.dir}"
        }
    },

    "login-forms": {
        "provider": "freemarker"
    },

    "account": {
        "provider": "freemarker"
    },

    "email": {
        "provider": "freemarker"
    },

    "scheduled": {
        "interval": 900
    },

    "connectionsMongo": {
        "default": {
            "host": "${OPENSHIFT_MONGODB_DB_HOST}",
            "port": "${OPENSHIFT_MONGODB_DB_PORT}",
            "db": "${OPENSHIFT_GEAR_NAME}",
            "clearOnStartup": "${keycloak.connectionsMongo.clearOnStartup:false}",
            "user": "${OPENSHIFT_MONGODB_DB_USERNAME}",
            "password": "${OPENSHIFT_MONGODB_DB_PASSWORD}",
        }
    }
}
